<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cvPet"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="330dp"
    android:layout_marginBottom="16dp"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    app:cardElevation="4dp"
    android:paddingTop="16dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:id="@+id/cuerpo_tarjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imgvfoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bulldog"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:id="@+id/barra_estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:weightSum="1">

            <ImageView
                android:id="@+id/boton_likes"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/h2"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/nombre_mascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/nombre_cardview"

                android:text="@string/nombre_mascota"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/boton_likes" />

            <TextView
                android:id="@+id/numero_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/likes"

                android:textSize="@dimen/nombre_cardview"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/hueso_amarillo"
                android:layout_marginRight="5dp"/>

            <ImageView
                android:id="@+id/hueso_amarillo"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:src="@drawable/h1"
                android:layout_weight="0.08"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                />

        </RelativeLayout>


    </RelativeLayout>



</android.support.v7.widget.CardView>